{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "paths": {
      "@lib/*": ["src/*"],
      "@types": ["src/types.ts"],
      "@helpers/*": ["src/helpers/*"],
    }
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "src/**/*.test.ts"
  ]
}
