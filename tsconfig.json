{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES2018", "DOM"],
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/setupTests.ts",
    "**/__mocks__/*",
    "**/dist/*"
  ],
  "typedocOptions": {
    "out": "docs",
    "inputFiles": [
      "./packages/server/src/index.ts",
      "./packages/browser/src/index.ts",
      "./packages/typescript-types/src/index.ts"
    ],
    "readme": "./README.md",
    "mode": "library",
    "name": "@SimpleWebAuthn",
    "excludeExternals": true,
    "excludeNotExported": true,
    "excludePrivate": true
  }
}
