{
  "name": "simplewebauthn-monorepo",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --scope=@simplewebauthn/typescript-types && lerna bootstrap --scope=@simplewebauthn/browser --scope=@simplewebauthn/server",
    "lint": "prettier --write packages/ example/ && eslint --fix packages/ example/",
    "docs": "npm run bootstrap && typedoc --tsconfig tsconfig.json"
  },
  "devDependencies": {
    "@types/cbor": "^5.0.0",
    "@types/elliptic": "^6.4.12",
    "@types/jest": "^25.2.3",
    "@types/jsrsasign": "^8.0.3",
    "@types/node-rsa": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^3.0.1",
    "@typescript-eslint/parser": "^3.0.1",
    "eslint": "^7.1.0",
    "husky": "^4.2.5",
    "jest": "^25.1.0",
    "lerna": "^3.21.0",
    "lint-staged": "^10.2.6",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "semver": "^7.3.2",
    "ts-jest": "^25.5.1",
    "ts-node": "^8.10.1",
    "ttypescript": "^1.5.10",
    "typedoc": "^0.17.0-3",
    "typescript": "^3.9.2",
    "typescript-transform-paths": "^1.1.14"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,md,json}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
